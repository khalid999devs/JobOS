<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.jobos.desktop.controller.LoginController"
      alignment="CENTER" 
      spacing="24" 
      styleClass="login-screen">
    <padding>
        <Insets top="48" right="48" bottom="48" left="48"/>
    </padding>

    <VBox alignment="CENTER" spacing="8" maxWidth="400">
        <Label text="Welcome Back" styleClass="title"/>
        <Label text="Sign in to continue" styleClass="subtitle"/>
    </VBox>

    <VBox spacing="16" maxWidth="400" VBox.vgrow="NEVER">
        <VBox spacing="8">
            <Label text="Email" styleClass="form-label"/>
            <TextField fx:id="emailField" promptText="Enter your email" styleClass="text-field"/>
        </VBox>

        <VBox spacing="8">
            <Label text="Password" styleClass="form-label"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="text-field"/>
        </VBox>

        <HBox alignment="CENTER_RIGHT">
            <Label fx:id="forgotPasswordLink" text="Forgot Password?" styleClass="link" onMouseClicked="#handleForgotPassword"/>
        </HBox>

        <Button fx:id="loginButton" text="Sign In" styleClass="primary-button" maxWidth="Infinity" onAction="#handleLogin"/>
        
        <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false"/>
    </VBox>

    <HBox alignment="CENTER" spacing="8">
        <Label text="Don't have an account?" styleClass="body"/>
        <Label fx:id="registerLink" text="Sign up" styleClass="link" onMouseClicked="#handleRegisterLink"/>
    </HBox>
</VBox>
