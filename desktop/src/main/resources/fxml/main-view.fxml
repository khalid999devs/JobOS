<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jobos.desktop.controller.MainController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <Label styleClass="title" text="JobOS Desktop">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <Label fx:id="responseLabel" styleClass="response-label" text="Backend response will appear here" wrapText="true">
        <font>
            <Font size="14.0"/>
        </font>
    </Label>

    <Button fx:id="pingButton" onAction="#handlePingButton" styleClass="primary-button" text="Ping Backend">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>

    <Label text="Notifications:" styleClass="section-title">
        <font>
            <Font name="System Bold" size="16.0"/>
        </font>
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Label>

    <TextArea fx:id="notificationsArea" editable="false" prefHeight="200.0" wrapText="true" styleClass="notifications-area">
        <font>
            <Font name="Monospaced" size="12.0"/>
        </font>
        <VBox.margin>
            <Insets top="10.0"/>
        </VBox.margin>
    </TextArea>
</VBox>
