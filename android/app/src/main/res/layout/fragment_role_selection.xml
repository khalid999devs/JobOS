<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/padding_screen">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:text="@string/select_role"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_xxl"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:text="How would you like to use JobOS?"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/seeker_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xl"
        app:cardCornerRadius="@dimen/corner_radius_lg"
        app:cardElevation="@dimen/elevation_sm"
        app:strokeColor="@color/outline"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_card">

            <ImageView
                android:id="@+id/seeker_icon"
                android:layout_width="@dimen/icon_xxl"
                android:layout_height="@dimen/icon_xxl"
                android:src="@drawable/ic_search"
                android:tint="@color/primary"
                android:background="@drawable/bg_circle_primary"
                android:backgroundTint="@color/primary_container"
                android:padding="@dimen/spacing_md"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/seeker_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:text="@string/role_seeker"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_xl"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/seeker_icon"
                app:layout_constraintTop_toTopOf="@id/seeker_icon" />

            <TextView
                android:id="@+id/seeker_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/role_seeker_desc"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_md"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/seeker_icon"
                app:layout_constraintTop_toBottomOf="@id/seeker_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/poster_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        app:cardCornerRadius="@dimen/corner_radius_lg"
        app:cardElevation="@dimen/elevation_sm"
        app:strokeColor="@color/outline"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seeker_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_card">

            <ImageView
                android:id="@+id/poster_icon"
                android:layout_width="@dimen/icon_xxl"
                android:layout_height="@dimen/icon_xxl"
                android:src="@drawable/ic_jobs"
                android:tint="@color/secondary"
                android:background="@drawable/bg_circle_primary"
                android:backgroundTint="@color/secondary_container"
                android:padding="@dimen/spacing_md"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/poster_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:text="@string/role_poster"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_xl"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/poster_icon"
                app:layout_constraintTop_toTopOf="@id/poster_icon" />

            <TextView
                android:id="@+id/poster_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_md"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/role_poster_desc"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_md"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/poster_icon"
                app:layout_constraintTop_toBottomOf="@id/poster_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_button"
        style="@style/Widget.JobOS.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:text="@string/continue_text"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/continue_button"
        app:layout_constraintEnd_toEndOf="@id/continue_button"
        app:layout_constraintStart_toStartOf="@id/continue_button"
        app:layout_constraintTop_toTopOf="@id/continue_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
